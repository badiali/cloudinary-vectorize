---
import CloudinaryLogo from "../components/CloudinaryLogo.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vectorize Image">
	<header
		class="w-full max-w-5xl absolute top-0 flex items-center justify-between px-6 xl:px-0 py-3 border-b-[1px] border-gray-100"
	>
		<h1 class="text-2xl md:text-3xl font-bold">
			Cloud<span class="text-gradient">Vectorize</span>
		</h1>
		<ul class="flex gap-8 m-0">
			<li>
				<a
					href="https://badiali.es"
					target="_blank"
					class="text-gray-500 hover:text-violet-500">About us</a
				>
			</li>
			<li>
				<a
					href="mailto:luis@badiali.es"
					class="text-gray-500 hover:text-violet-500">Contact</a
				>
			</li>
		</ul>
	</header>
	<main class="w-full max-w-5xl">
		<div
			class="w-full flex flex-col lg:flex-row items-center justify-between gap-10 md:gap-16 px-6 xl:px-0"
		>
			<div
				class="flex flex-col lg:flex-col items-center lg:items-start md:max-w-3xl lg:max-w-lg"
			>
				<img
					src="https://res.cloudinary.com/djuhnyiuy/image/upload/e_vectorize:3:0.9/f_svg/v1677139869/cld-sample-5.jpg"
					class="w-full mb-8 rounded-[2rem]"
				/>
				<h1
					class="font-bold tracking-tight mb-3 text-4xl md:text-5xl lg:text-6xl text-center lg:!text-left"
				>
					<span class="text-gradient">Vectorize</span> Image
				</h1>
				<p class="font-bold text-xl m-0 text-center lg:!text-left">
					100% Automatically and
					<span class="text-gradient"> Free</span>
				</p>
			</div>
			<div class="relative flex flex-col gap-4 md:gap-8 max-w-md">
				<div
					class="dropzone w-full flex flex-col sm:justify-center sm:items-center sm:gap-8 sm:pt-36 sm:pb-16 sm:px-16 rounded-[2rem]"
				>
					<button
						type="button"
						class="btn rounded-2xl font-bold transition ease-in-out text-center hover:no-underline inline-flex items-center justify-center text-2xl px-8 py-2.5 text-white bg-primary"
						>Upload Image</button
					>
					<div class="hidden sm:flex flex-col gap-1.5 text-black">
						<p class="m-0 font-bold text-xl">
							or drop a file,
						</p><span class="text-xs text-center"
							>paste <a href="#" class="underline">URL</a>
						</span>
					</div>
				</div>
			</div>
		</div>
	</main>
	<footer
		class="w-full max-w-5xl absolute bottom-0 flex justify-center items-center gap-x-2 px-6 xl:px-0 py-3 font-semibold"
	>
		Built with <a
			href="https://cloudinary.com"
			target="_blank"
			rel="noreferrer"><CloudinaryLogo /></a
		>
	</footer>
</Layout>

<style>
	.dropzone * {
		position: relative;
		z-index: 2;
	}
	.dropzone::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
		width: 100%;
		height: 100%;
		border-radius: 2rem;
		background-color: #eef2ff;
	}
	.dropzone::after {
		content: "";
		position: absolute;
		top: 1.5rem;
		left: -1.5rem;
		z-index: 0;
		width: 100%;
		height: 100%;
		border-radius: 2rem;
		background-image: radial-gradient(currentColor 1px, transparent 1px);
		background-size: 10px 10px;
		color: var(--primary);
	}
	@media (min-width: 1024px) {
		.dropzone::after {
			top: 2rem;
			left: -2rem;
		}
	}
</style>
