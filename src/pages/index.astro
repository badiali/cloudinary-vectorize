---
import CloudinaryLogo from "../components/CloudinaryLogo.svelte";
import Steps from "../components/Steps.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vectorize Image">
	<header
		class="w-full max-w-5xl absolute top-0 flex items-center justify-between px-6 xl:px-0 py-3 border-b-[1px] border-gray-100"
	>
		<h1 class="text-2xl md:text-3xl font-bold">
			Cloud<span class="text-gradient">Vectorize</span>
		</h1>
		<ul class="flex gap-8 m-0">
			<li>
				<a
					href="mailto:luis@badiali.es"
					class="text-gray-500 hover:text-violet-500">Contact</a
				>
			</li>
		</ul>
	</header>
	<main class="w-full max-w-5xl">
		<Steps client:visible />
	</main>
	<footer
		class="w-full max-w-5xl absolute bottom-0 flex justify-center items-center gap-x-2 px-6 xl:px-0 py-3 font-semibold"
	>
		Built with <a
			href="https://cloudinary.com"
			target="_blank"
			rel="noreferrer"><CloudinaryLogo client:visible /></a
		>
	</footer>
</Layout>

