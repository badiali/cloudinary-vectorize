---
import { ImageStatus } from "../types.d"
import CloudinaryLogo from "../components/CloudinaryLogo.svelte";
import StepUpload from "../components/StepUpload.svelte";
import Layout from "../layouts/Layout.astro";
import { imageStatus } from "../store"
---

<Layout title="Vectorize Image">
	<header
		class="w-full max-w-5xl absolute top-0 flex items-center justify-between px-6 xl:px-0 py-3 border-b-[1px] border-gray-100"
	>
		<h1 class="text-2xl md:text-3xl font-bold">
			Cloud<span class="text-gradient">Vectorize</span>
		</h1>
		<ul class="flex gap-8 m-0">
			<li>
				<a
					href="https://badiali.es"
					target="_blank"
					class="text-gray-500 hover:text-violet-500">About us</a
				>
			</li>
			<li>
				<a
					href="mailto:luis@badiali.es"
					class="text-gray-500 hover:text-violet-500">Contact</a
				>
			</li>
		</ul>
	</header>
	<main class="w-full max-w-5xl">
		<div
			class="w-full flex flex-col lg:flex-row items-center justify-between gap-10 md:gap-16 px-6 xl:px-0"
		>
			<div
				class="flex flex-col lg:flex-col items-center lg:items-start md:max-w-3xl lg:max-w-lg"
			>
				<img
					src="https://res.cloudinary.com/badiali/image/upload/e_vectorize:3:0.9/f_svg/v1677139869/cld-sample-5.jpg"
					class="w-full mb-8 rounded-[2rem]"
				/>
				<h1
					class="font-bold tracking-tight mb-3 text-4xl md:text-5xl lg:text-6xl text-center lg:!text-left"
				>
					<span class="text-gradient">Vectorize</span> Image
				</h1>
				<p class="font-bold text-xl m-0 text-center lg:!text-left">
					100% Automatically and
					<span class="text-gradient"> Free</span>
				</p>
			</div>
			<div class="relative flex flex-col gap-4 md:gap-8 max-w-md">
				<StepUpload client:visible />
			</div>
		</div>
	</main>
	<footer
		class="w-full max-w-5xl absolute bottom-0 flex justify-center items-center gap-x-2 px-6 xl:px-0 py-3 font-semibold"
	>
		Built with <a
			href="https://cloudinary.com"
			target="_blank"
			rel="noreferrer"><CloudinaryLogo client:visible /></a
		>
	</footer>
</Layout>

