---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vectorize Image">
	<main>
		<h1 class="font-bold tracking-tight m-0 text-4xl md:text-5xl lg:text-6xl text-center md:!text-left">
			<span class="text-gradient">Vectorize</span> Image
		</h1>
		<p class="font-bold text-xl m-0 text-center md:!text-left">
			100% Automatically and
			<span class="text-gradient">
				Free
			</span>
		</p>
	</main>
</Layout>

<style>
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
